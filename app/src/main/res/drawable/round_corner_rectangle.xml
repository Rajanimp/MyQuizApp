<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
<item>
    <shape android:shape="rectangle">
        <solid android:color="@color/colorRectangleAlpha"/>
        <corners android:radius="8dp" />
    </shape>
</item>

<item
    android:left="0dp"
    android:right="0dp"
    android:top="0dp"
    android:bottom="2dp">
    <shape android:shape="rectangle">
        <gradient
            android:type="linear"
            android:centerX="30%"
            android:centerY="70%"
            android:endColor="@color/colorRectangleLight"
            android:centerColor="@color/colorRectangle"
            android:startColor="@color/colorRectangleLight"
            android:angle="135" />
        <corners
            android:radius="8dp" />
        <padding
            android:left="10dp"
            android:top="10dp"
            android:right="10dp"
            android:bottom="10dp" />
    </shape>
</item>
</layer-list>